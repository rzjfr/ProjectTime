<h1>Project Milestones</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>passed?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project.milestone.each do |milestone| %>
      <% next if @project.first_milestone.id == milestone.id %>
      <tr>
        <td><%= milestone.title %></td>
        <td><%= milestone.end_date %></td>
        <td><%= milestone.passed? %></td>
        <td> <%= link_to "Edit", edit_milestone_path(milestone.id),
                 class: "btn btn-mini btn-link"%> </td>
        <td>
        <%= form_for(milestone, html: { method: :delete }) do |f| %>
            <%= hidden_field_tag :project_id , @project.id %>
            <%= f.submit "Destroy", class: "btn btn-mini btn-link" , data: { disable_with: "Please wait..." } %>
        <% end %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
