<h1>Sign up</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
        <%= f.label :email, class:"control-label"%>
        <%= f.email_field :email, autofocus: true , class: 'form-control' %>
    </div>

    <div class="field">
        <%= f.label :password, class:"control-label"%>
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" , class: 'form-control' %>
    </div>

    <div class="field">
        <%= f.label :password_confirmation, class:"control-label"%>
        <%= f.password_field :password_confirmation, autocomplete: "off"  , class: 'form-control'%>
    </div>

    <div class="field">
        <%= f.label "User name (you'll be refered as @username)", class:"control-label"%>
        <%= f.text_field :username, class: 'form-control'%>
    </div>

        <%= f.submit "Sign up", class: "btn btn-primary" %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
<script>
  $("#user_email").bind("change paste keyup", function() {
      //$("#user_username").val($(this).val().replace(/[aeiou]/gi, '').replace(/@.*/gi, '') + "<%=j(rand(36**2).to_s(36))%>");
      $("#user_username").val($(this).val().replace(/@.*/gi, ''));
  });
</script>
