<% resource_text = resource.gsub(/.+\// ,"").gsub("_", "-")%>
<% remote ||= false %>
<div class="modal fade" id="modal-<%=resource_text%>"
  tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="modal-<%=resource_text%>">
          <%=resource_text.gsub("-", " ").capitalize%>
        </h4>
      </div>
      <div class="modal-body" id="modal-<%=resource_text%>-body">
        <%= render "#{resource}" if !remote %>
      </div>
    </div>
  </div>
</div>
