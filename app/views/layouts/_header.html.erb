<header class="navbar navbar-static-top navbar-default">
  <div class="container">
    <%#= link_to "Home Page", root_path, id: "logo", class: 'navbar-brand'%>

    <nav>
      <form class="navbar-form navbar-left" role="search">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search" name="srch-term" id="srch-term">
            <div class="input-group-btn">
                <button class="btn btn-default search-btn" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
        </div>
      </form>
      <% if related_page?("projects") && current_user.present? &&
           (current_user.projects.count > 0)%>
        <strong class="light-text text-center"> Select Project: </strong>
        <%= collection_select :project, :id, current_user.member_projects, :id, :name,
            {selected: params[:id]},
            {onchange: "window.location = '/projects/'+ value;", class: "quick-project"}%>
      <% end %>
      <ul class="nav navbar-nav navbar-right">
        <li class="<%=home_active? %>"><%= link_to "Home", root_path %></li>
        <% if current_user.present? %>
          <% if in_project_board? || in_project_edit? %>
            <li  class="<%=edit_active?%>">
              <%= link_to 'Edit', request.path + "/edit" %>
            </li>
          <% end %>
          <li class="<%=active?(projects_path) %>">
            <%= link_to "My Projects", projects_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                 <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                 @<%=current_user.username%> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Account Edit", edit_user_registration_path %></li>
              <li><%= link_to "Messages (inbox)", inbox_path %></li>
              <li><%= link_to "Messages (sent)", sent_path %></li>

              <li class="divider"></li>
              <li>
                <%= link_to "Log out", "/logout" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", "/login" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
